# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
# Rules
all : $(NAME)
.PHONY : clean
.PHONY : oclean
.PHONY : fclean
.PHONY : re

# Target and Dependencies
$(NAME) : $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)
%.o : %.c
	$(CC) -c $< -o $@


clean :
	$(RM) *~ $(NAME)

oclean :
	$(RM) $(OBJ)

fclean : clean oclean

re: fclean all

